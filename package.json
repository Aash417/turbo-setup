{
  "name": "downtime",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:push": "turbo -F @repo/database db:push",
    "db:studio": "turbo -F @repo/database db:studio",
    "db:generate": "turbo -F @repo/database db:generate",
    "db:migrate": "turbo -F @repo/database db:migrate"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}